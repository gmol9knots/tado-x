{
  "domain": "tado",
  "name": "Tado",
  "codeowners": ["@chiefdragon", "@erwindouna", "@Moritz-Schmidt"],
  "config_flow": true,
  "dhcp": [
    {
      "hostname": "tado*"
    }
  ],
  "documentation": "https://www.home-assistant.io/integrations/tado",
  "homekit": {
    "models": ["tado", "AC02"]
  },
  "iot_class": "cloud_polling",
  "loggers": ["PyTado"],
  "requirements": ["python-tado==0.19.2"],
  "version": 2024.12,
  "services": {
    "set_climate_temperature_offset": {
      "description": "Set the Tado device temperature offset",
      "fields": {
        "offset": {
          "description": "Offset value in °C",
          "example": 1.0,
          "selector": { "number": { "min": -10, "max": 10, "step": 0.01 } }
        }
      }
    },
    "set_temperature_offset": {
      "description": "Set the Tado device temperature offset",
      "fields": {
        "temperature_offset": {
          "description": "Offset value in °C",
          "example": 1.0,
          "selector": { "number": { "min": -10, "max": 10, "step": 0.01 } }
        }
      }
    }
  }
}
