{
  "domain": "tado",
  "name": "Tado",
  "codeowners": ["@chiefdragon", "@erwindouna", "@Moritz-Schmidt"],
  "config_flow": true,
  "dhcp": [
    {
      "hostname": "tado*"
    }
  ],
  "documentation": "https://www.home-assistant.io/integrations/tado",
  "homekit": {
    "models": ["tado", "AC02"]
  },
  "iot_class": "cloud_polling",
  "loggers": ["PyTado"],
  "requirements": ["python-tado==0.17.7"],
  "version": 2024.12,
  "services": {
    "set_temperature_offset": {
      "description": "Set the Tado device temperature offset",
      "fields": {
        "temperature_offset": {
          "description": "Offset value in Â°C",
          "example": 1.0,
          "selector": { "number": { "min": -5, "max": 5, "step": 0.1 } }
        }
      }
    }
  }
}
